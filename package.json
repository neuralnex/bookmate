{
  "name": "bookmate",
  "version": "1.0.0",
  "description": "Book ordering system backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d src/config/database.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/config/database.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/config/database.ts",
    "create-admin": "ts-node scripts/create-admin.ts",
    "view-config": "./view-config.sh",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d --build",
    "docker:prod": "docker compose up -d --build",
    "docker:down": "docker compose -f docker-compose.dev.yml down && docker compose down",
    "docker:logs": "docker compose logs -f api",
    "docker:logs:dev": "docker compose -f docker-compose.dev.yml logs -f api",
    "docker:status": "docker compose ps && docker compose -f docker-compose.dev.yml ps",
    "docker:start": "./docker-start.sh"
  },
  "keywords": [
    "bookmate",
    "backend",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "*",
    "cors": "*",
    "dotenv": "*",
    "express": "*",
    "express-rate-limit": "*",
    "helmet": "*",
    "jsonwebtoken": "*",
    "multer": "^2.0.2",
    "pg": "*",
    "reflect-metadata": "*",
    "swagger-jsdoc": "*",
    "swagger-ui-express": "*",
    "typeorm": "*",
    "zod": "*"
  },
  "devDependencies": {
    "@types/bcrypt": "*",
    "@types/cors": "*",
    "@types/express": "*",
    "@types/express-rate-limit": "*",
    "@types/jsonwebtoken": "*",
    "@types/multer": "^2.0.0",
    "@types/node": "*",
    "@types/swagger-jsdoc": "*",
    "@types/swagger-ui-express": "*",
    "ts-node-dev": "*",
    "typescript": "*"
  }
}
